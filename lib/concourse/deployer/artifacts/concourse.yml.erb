---
name: concourse

director_uuid: "<%= director_uuid %>"

releases:
- name: concourse
  version: latest
- name: garden-runc
  version: latest
- name: concourse-windows-worker
  version: latest
- name: windows-ruby-dev-tools
  version: latest

stemcells:
- alias: trusty
  os: ubuntu-trusty
  version: latest
- alias: windows
  os: windows2012R2
  version: latest

instance_groups:
- name: web
  instances: 1
  vm_type: f1-micro
  vm_extensions:
  - lb
  stemcell: trusty
  azs: [z1]
  networks: [{name: private}]
  jobs:
  - name: atc
    release: concourse
    properties:
      external_url: "https://<%= dns_name %>"
      basic_auth_username: ((basic_auth_username))
      basic_auth_password: ((basic_auth_password))
      tls_bind_port: 443
      tls_cert: ((atc_tls.certificate))
      tls_key: ((atc_tls.private_key))
      postgresql_database: &atc_db atc
  - name: tsa
    release: concourse
    properties:
      host_key: ((tsa_host_ssh.private_key))
      host_public_key: ((tsa_host_ssh.public_key))
      authorized_keys:
        - ((windows_worker_ssh.public_key))

- name: db
  instances: 1
  vm_type: g1-small
  stemcell: trusty
  persistent_disk_type: 5GB
  azs: [z1]
  networks: [{name: private}]
  jobs:
  - name: postgresql
    release: concourse
    properties:
      databases:
      - name: *atc_db
        role: ((pg_role))
        password: ((pg_password))

- name: worker
  instances: 3
  vm_type: f1-micro
  vm_extensions:
  - 50GB_ephemeral_disk
  stemcell: trusty
  azs: [z1]
  networks: [{name: private}]
  jobs:
  - name: groundcrew
    release: concourse
    properties: {}
  - name: baggageclaim
    release: concourse
    properties: {}
  - name: garden
    release: garden-runc
    properties:
      garden:
        listen_network: tcp
        listen_address: 0.0.0.0:7777

- name: worker-windows
  instances: 1
  vm_type: f1-micro
  vm_extensions:
  - 50GB_ephemeral_disk
  stemcell: windows
  azs: [z1]
  networks: [{name: private}]
  jobs:
  - name: concourse_windows
    release: concourse-windows-worker
  - name: windows-ruby-dev-tools
    release: windows-ruby-dev-tools
  properties:
    concourse_windows:
      tsa_host: "<%= dns_name %>"
      tsa_public_key: ((tsa_host_ssh.public_key))
      tsa_worker_private_key: ((windows_worker_ssh.private_key))


update:
  canaries: 1
  max_in_flight: 10
  serial: false
  canary_watch_time: 1000-60000
  update_watch_time: 1000-60000

variables:
  - name: basic_auth_username
    type: password
  - name: basic_auth_password
    type: password
  - name: pg_role
    type: password
  - name: pg_password
    type: password
  - name: default_ca
    type: certificate
    options:
      is_ca: true
      common_name: "<%= dns_name %>"
  - name: atc_tls
    type: certificate
    options:
      ca: default_ca
      common_name: "<%= dns_name %>"
  - name: tsa_host_ssh
    type: ssh
  - name: windows_worker_ssh
    type: ssh
